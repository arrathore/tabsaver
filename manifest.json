{
	"manifest_version": 3,
	"name": "tabsaver",
	"version": "1.0",

	"description": "saves ur tabs",

	"icons": {
		"48": "icons/border-48.png"
	},

    "permissions": [
      "scripting",
      "<all_urls>",
      "tabs",
      "windows",
      "storage"
    ],
    
    "background": {
        "scripts": ["background.js"]
    },
    
    "action": {
        "default_icon": {
            "16": "icons/page-16.png",
            "32": "icons/page-32.png"
        }
    }
}
