{
	"manifest_version": 3,
	"name": "tabsaver",
	"version": "1.0",
    
    "browser_specific_settings": {
      "gecko": {
        "id": "tabsaver@example.com"
      }
    },

	"description": "saves ur tabs",

	"icons": {
		"16": "icons/page-16.png",
        "32": "icons/page-32.png"
	},

    "permissions": [
      "scripting",
      "<all_urls>",
      "tabs",
      "windows",
      "storage",
      "webNavigation"
    ],
    
    "background": {
        "scripts": ["background.js"]
    },
    
    "action": {
        "default_icon": {
            "16": "icons/page-16.png",
            "32": "icons/page-32.png"
        },
        "default_title": "tabsaver",
        "default_popup": "popup/popup.html"
    }
}
